<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="500dp"
    android:background="@drawable/button_round"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:src="@drawable/back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_weight="0"
        android:orientation="vertical"
        android:background="@drawable/edittext_rounded_corner_rectangle_3">

        <GridView
            android:id="@+id/gridview3"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_margin="1dp"
            android:background="@drawable/edittext_rounded_corner_rectangle_4"
            android:numColumns="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </GridView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="선택한 재료 : "
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"/>

        <TextView
            android:id="@+id/text_selected"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"/>

        <EditText
            android:id="@+id/text_amount"
            android:layout_width="181dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="양을 입력해 주세요"
            android:inputType="textPersonName"
            android:textAlignment="center"
            tools:ignore="TouchTargetSizeCheck"
            android:fontFamily="@font/binggrae"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_add_ing1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_round"
            android:text="재료 추가"
            tools:ignore="TouchTargetSizeCheck"
            android:fontFamily="@font/binggrae"/>
    </LinearLayout>


</LinearLayout>