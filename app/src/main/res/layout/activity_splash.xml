<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView_name_2"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="21dp"
            android:background="@drawable/app_name_3" />
        <LinearLayout
            android:id="@+id/fadein_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView_name_1"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/app_name_2" />
            <ImageView
                android:id="@+id/imageView_splash"
                android:layout_width="300dp"
                android:layout_height="270dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/app_main" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>