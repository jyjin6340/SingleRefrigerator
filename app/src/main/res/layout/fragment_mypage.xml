<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F0D7"
    android:orientation="vertical"
    tools:context=".Fragments.Fragment_refrige">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            app:civ_border_color="@color/black"
            android:src="@drawable/mypage"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/text_welcome"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_myinfo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ripple_unbounded"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/myinfo"

            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/button_logout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:background="@drawable/ripple_unbounded"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logout"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="내 정보 수정" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="로그아웃" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_myrecipe"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/myrecipe"
            android:background="@drawable/ripple_unbounded"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/button_mylike"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mylike"
            android:background="@drawable/ripple_unbounded"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/button_mybmark"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mybookmark"
            android:background="@drawable/ripple_unbounded"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="내 레시피" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="내 좋아요" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="내 북마크" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_servinfo"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:background="@drawable/button_round"
            android:text="서비스 정보 확인" />
    </LinearLayout>

</LinearLayout>